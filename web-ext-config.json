{
  "verbose": true,
  "sourceDir": "dist",
  "artifactsDir": "releases",
  "build": {
    "overwriteDest": true
  },
  "run": {
    "startUrl": ["about:debugging#/runtime/this-firefox", "about:addons"],
    "browserConsole": true,
    "firefoxProfile": "./profile",
    "keepProfileChanges": true,
    "watchFile": "dist/**/*",
    "devtools": true,
    "preInstall": true,
    "chromiumProfile": "./profile-chrome",
    "target": ["firefox-desktop", "chromium"]
  },
  "ignoreFiles": [
    "package.json",
    "package-lock.json",
    "yarn.lock",
    "bun.lockb",
    "node_modules",
    ".git",
    "releases",
    "web-ext-artifacts",
    "**/*.map"
  ],
  "lint": {
    "selfHosted": true,
    "warningsAsErrors": true
  }
}
